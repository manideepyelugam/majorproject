<% layout("./layouts/boilerplate") %>

<div class="row">
    <div class="col-6  offset-3">
    <h3>Create New Listing</h3>
    <form action="/listings" method="post" novalidate class="needs-validation">

       <div class="md-3" > <label for="title" class="form-label">Title</label><input type="text" name="listings[title]" placeholder="Enter title" class="form-control" required><div class="invalid-feedback">Should give a title</div><div class="valid-feedback">Looks Good</div></div><br>
       <div class="md-3"> <label for="price" class="form-label">Price</label><input type="number" name="listings[price]" placeholder="Enter price" class="form-control" required><div class="invalid-feedback">Should give a Price</div><div class="valid-feedback">Perfectos</div></div> <br>
       <div class="md-3"> <label for="description" class="form-label">Description</label><textarea name="listings[description]" class="form-control" placeholder="Enter description" required></textarea><div class="invalid-feedback">Should give a Description</div><div class="valid-feedback">Awesome!!</div></div>  <br>
      <div class="row"><div class="md-3 col-4"> <label for="location" class="form-label">Location</label><input type="text" name="listings[location]" placeholder="Warangal,Telangana" class="form-control" required><div class="invalid-feedback">Should give a Location</div><div class="valid-feedback">Amazing</div></div> 
      <div class="md-3 col-8"> <label for="country" class="form-label">Country</label><input type="text" name="listings[country]" placeholder="India" class="form-control" required><div class="invalid-feedback">Should give Country</div><div class="valid-feedback">Nice</div></div></div> <br>
      <div class="md-3">  <label for="image" class="form-label">Image URL/Link</label><input type="text" name="listings[image]" placeholder="Enter image URL/Link" class="form-control" required><div class="invalid-feedback">Should give a Image URL</div><div class="valid-feedback">Gracias</div></div> 
        <button class="btn btn-success">submit</button>
    </form></div></div>
